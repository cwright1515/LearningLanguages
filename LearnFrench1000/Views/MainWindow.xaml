<Window x:Class="LearnFrench1000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnFrench1000"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed" >
    <Grid>

        <Rectangle Opacity="0.2" Grid.ColumnSpan="5" Grid.RowSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#78A2CC" Offset="0.0" />
                    <GradientStop Color="#96B9D0" Offset="0.25" />
                    <GradientStop Color="#AECBD6" Offset="0.5" />
                    <GradientStop Color="#BFD4DB" Offset="0.75" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <ContentControl x:Name="CurrentView" Margin="50" Content="{Binding CurrentView}"/>

    </Grid>
</Window>
